{
	"compilerOptions": {
		"composite": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"outDir": "dist",
		"removeComments": false,
		"rootDir": "src",
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es2017"
	},
	"include": [
		"src/**/*"
	]
}